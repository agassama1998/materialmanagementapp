@model IEnumerable<MaterialManagement.Models.Material>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="display-4">Dashboard</h1>
        <p class="lead">Welcome To Material Management System</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-box-seam"></i> Total Materials</h5>
                <p class="card-text display-6">@ViewBag.TotalMaterials</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-tags"></i> Total Categories</h5>
                <p class="card-text display-6">@ViewBag.TotalCategories</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-exclamation-triangle"></i> Low Stock Items</h5>
                <p class="card-text display-6">@ViewBag.LowStockItems</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-currency-dollar"></i> Total Value</h5>
                <p class="card-text display-6">@ViewBag.TotalValue?.ToString("C")</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Materials</h5>
                <a asp-controller="Materials" asp-action="Index" class="btn btn-primary btn-sm">View All</a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>SKU</th>
                                    <th>Category</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.SKU</td>
                                        <td>@item.Category?.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td>
                                            @if (item.IsLowStock)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-exclamation-triangle"></i> Low Stock
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> In Stock
                                                </span>
                                            }
                                        </td>
                                        <td>@item.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No materials found.
                        <a asp-controller="Materials" asp-action="Create">Add your first material</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
